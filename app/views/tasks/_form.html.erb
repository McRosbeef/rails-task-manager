<h1><u><%= @task.id ? "Edit" : "Create" %> a task</u></h1>
<%= form_for(@task) do |f| %>
  <%= f.text_field :name, placeholder: "Name", class: "class" %>
  <%= f.text_field :description, placeholder: "Description", class: "class" %>
  <%= f.label "Done ?" %>
  <%= f.check_box :done %>
  <%= f.submit %>
<% end %>


